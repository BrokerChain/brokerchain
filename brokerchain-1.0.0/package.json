        "stop": "pm2 stop brokerchain"
    },
    "type": "module",
    "private": true,
    "devDependencies": {
        "@jest/globals": "",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/prompts": "^2.4.9",
        "@types/uuid": "^9.0.8",
        "@types/yargs": "^17.0.32",
        "jest": "^29.7.0",
        "typescript": "^5.4.2"
    },
    "dependencies": {
        "axios": "^1.6.7",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.18.3",
        "node-pty": "^1.0.0",
        "pm2": "latest",
        "prompts": "^2.4.2",
        "tailwind-merge": "^2.2.1",
        "uuid": "^9.0.1",
        "yargs": "^17.7.2"
    },
    "jest": {
        "testPathIgnorePatterns": [
