{
    "name": "brokerchain",
    "version": "1.0.0",
    "engines": {
        "node": ">=10.12.0"
    },
    "scripts": {
        "build": "tsc --build",
        "watch": "tsc --watch",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "dev": "data_dir=./data node dist/library/x-brokerchain-node/run/index.js",
